# top-most EditorConfig file
root = true

# Any file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[src/**.js]
indent_style = space
indent_size = 2

[src/**.html]
indent_style = space
indent_size = 4

# Matches the exact file package.json
[{package.json}]
indent_style = space
indent_size = 2
